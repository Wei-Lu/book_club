<%= form_for(@review) do |f| %>


  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
    <% if (@review.errors.any? && @review.errors.messages.has_key?(:title)) %>
      <%= @review.errors.messages[:title].join(", ") %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
