<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.title %></td>
    <td><%= review.content %></td>
    <td><%= link_to 'Show', review %></td>
    <td><%= link_to 'Edit', edit_book_review_path(review), :class => "mybutton" %></td>
    <td><%= link_to 'Destroy', review,  :class => "mybutton", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

