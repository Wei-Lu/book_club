<% if current_user %>
<% if current_user.has_liked?(@book) %>
	<%= form_for @like, url: book_like_path(@book, @like), method: :delete do |f| %>
		<%= f.submit "Unlike", class: "btn btn-primary" %> <%= pluralize @book.likes.count, 'person' %> <%= pluralize_second_without_count @book.likes.count, 'like' %> this book!
	<% end %>
<% else %>
  <p><%= link_to raw('<i class=\'icon-thumbs-up icon-white\'></i> Like'),
  	book_likes_path(@book), 
	  class: "btn btn-primary",
	  method: :create %> <%= pluralize @book.likes.count, 'person' %> <%= pluralize_second_without_count @book.likes.count, 'like' %> this book!
	<% end %></p>
<% else %>
 <p>Please <%= link_to "sign in", new_user_session_path, :class => "mybutton", :style=> "color: #FFFFFF"%> to like this book or write a review...</p>
 <%= pluralize( @book.likes.count, 'person') %> likes this book!
<% end %>
