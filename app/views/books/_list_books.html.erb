<div style="margin-right:2cm" >
<table class="table table-striped table-bordered table-condensed" >
  <tr>
    <th>Title</th>
    <th>By</th>
    <th>Type</th>
    <% if @is_current_user_admin  %>    
      <th></th>
      <th></th>
    <% end %>
 </tr>

<% @books.each do |book| %>
  <tr>
    <td><strong><%= link_to book.title, book, :class => "listitem" %></strong></td>
    <td class="listitem"><%= book.author %></td>
    <td class="listitem"><%= book.book_type %></td>
  </tr>
<% end %>
</table>
</div>
