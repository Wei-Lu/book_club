<div style="margin-right:2cm" >
<table class="table table-striped table-bordered table-condensed" >
  <tr>
    <th>Title</th>
    <th>By</th>
    <th>Type</th>
    <% if @is_current_user_admin  %>    
      <th></th>
      <th></th>
    <% end %>
 </tr>

<% @books.each do |book| %>
  <tr>
    <td><strong><%= link_to book.title, book %></strong></td>
    <td><%= book.author %></td>
    <td><%= book.book_type %></td>
 
     <% if @is_current_user_admin  %>    
      <td><%= link_to 'Edit',  edit_book_path(book),  :class => "mybutton", :style=> "color: #FFFFFF" %></td>
      <td><%= link_to 'Delete', book, method: :delete, :class => "mybutton", :style=> "color: #FFFFFF", data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>
</div>
