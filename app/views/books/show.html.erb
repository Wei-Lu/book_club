<h2> <%= @book.title %> </h2>


<p>
  <b>By:</b>
  <%= @book.author %>
</p>

<p>
  <b>Type:</b>
  <%= @book.book_type %>
</p>

<p>
  <b>Description:</b>
  <div class="well" style="margin-right:2cm">
    <%= @book.description %>
  </div>
</p>
<hr>
<%= render 'likes/like' %>

<hr/>
<h2> Reviews </h2>
<%if @book.reviews.empty? %>
  "no review"
<%else%>

  <% @book.reviews.each do |review| %>
    <% if review.user %> 
     	<div class="well" style="margin-right:2cm">
        <p> Created at: <%= formatted_date review.created_at %> ;&nbsp; by: <%=review.user.name %></p>
    		<p> <%= review.content %> </p>
        <% if @is_current_user_admin or (current_user && current_user.id == review.user_id) %>     
          <%= link_to "Delete review", book_review_path(@book, review), method: :delete, confirm: "Are you sure you want to delete this review", :class => "mybutton", :style=> "color: #FFFFFF" %>
        <% end %>
      </div>
    <% end %>
  <% end %>

<% end %>

<br/>

<% if user_signed_in? %>
  <%= form_for @review, url: book_reviews_path(@book) do |f| %>
    <%= f.text_area :content, :rows => 5, :cols => 80, :class => "input-xxlarge" %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
<% end %> 

<% if @is_current_user_admin %>    
  <%= link_to 'Edit', edit_book_path(@book), :class => "mybutton", :style=> "color: #FFFFFF" %> &nbsp;
  <%= link_to 'Delete', @book, method: :delete, :class => "mybutton", :style=> "color: #FFFFFF", data: { confirm: 'Are you sure?' } %>&nbsp;
<% end %>
<%= link_to 'Back', books_path, :class => "mybutton", :style=> "color: #FFFFFF" %>
