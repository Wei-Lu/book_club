<h2> Book Details </h2>

<p>
  <b>Title:</b>
  <%= @book.title %>
</p>

<p>
  <b>By:</b>
  <%= @book.author %>
</p>

<p>
  <b>Type:</b>
  <%= @book.book_type %>
</p>

<p>
  <b>Description:</b>
  <div class="well" style="padding: 5px 5px 5px 5px;">
    <%= @book.description %>
  </div>
</p>
<hr>
<%= render 'likes/like' %>

<hr/>
<h2> Reviews </h2>
<%if @book.reviews.empty? %>
  "no review"
<%else%>

  <% @book.reviews.each do |review| %>
   	<div class="well" style="padding: 5px 5px 5px 5px;">
      <p> Created at: <%= formatted_date review.created_at %> ;&nbsp; by: <%=review.user.name %></p>
  		<p> <%= review.content %> </p>
      <% if @is_current_user_admin or (current_user && current_user.id == review.user_id) %>     
        <%= link_to "Delete review", book_review_path(@book, review), method: :delete, confirm: "Are you sure you want to delete this review", :class => "mybutton" %>
      <% end %>
    </div>
  <% end %>

<% end %>

<br/>


<%= form_for @review, url: book_reviews_path(@book) do |f| %>
  <%= f.text_area :content, rows: 5 %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
 
<% if @is_current_user_admin %>    
  <%= link_to 'Edit', edit_book_path(@book), :class => "mybutton", :style=> "color: #FFFFFF" %> &nbsp;
<% end %>
<%= link_to 'Back', books_path, :class => "mybutton", :style=> "color: #FFFFFF" %>
