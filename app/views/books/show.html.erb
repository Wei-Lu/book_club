<%= render 'book' %>
<hr>
<%= render 'likes/like' %>

<hr/>
<%= render 'reviews' %>

<br/>

<% if user_signed_in? %>
  <%= form_for @review, url: book_reviews_path(@book) do |f| %>
    <%= f.text_area :content, :rows => 5, :cols => 80, :class => "input-xxlarge" %>
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <i class="icon-envelope icon-white"></i> Create Review
    <% end %>
  <% end %>
<% end %> 

  <% if @is_current_user_admin %>    
    <%= link_to 'Edit', edit_book_path(@book), :class => "mybutton", :style=> "color: #FFFFFF" %> &nbsp;
  <% end %>

<%= link_to 'Back', books_path, :class => "mybutton", :style=> "color: #FFFFFF" %>
