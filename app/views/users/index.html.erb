<h1>Listing users</h1>
<div style="margin-right:2cm" >
  <table class="table table-striped table-bordered table-condensed" >
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>is Admin</th>
    </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, edit_user_path(user), :class => "listitem" %></td>
      <td><%= link_to user.email, edit_user_path(user), :class => "listitem" %></td>      
      <td><%= get_is_user_admin(user) %></td>
    </tr>
  <% end %>
  </table>
</div>
<br />
