<h1>Listing users</h1>
<div style="margin-right:2cm" >
  <table class="table table-striped table-bordered table-condensed" >
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>is Admin</th>
      <th></th>
      <th></th>
    </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= link_to user.email, user %></td>
      <td><%= get_is_user_admin(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user), :class => "mybutton", :style=> "color: #FFFFFF" %></td>
      <td><%= link_to 'Destroy', user, :class => "mybutton", :style=> "color: #FFFFFF", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>
</div>
<br />

<%= link_to 'New User', new_user_path, :class => "mybutton", :style=> "color: #FFFFFF" %>
